PROBLEM5
%sql SELECT COMMUNITY_AREA_NAME FROM CENSUS_DATA WHERE COMMUNITY_AREA_NAME like'B%';

PROBLEM6
%sql select NAME_OF_SCHOOL from CHICAGO_PUBLIC_SCHOOLS where (COMMUNITY_AREA_NUMBER BETWEEN 10 AND 15) AND HEALTHY_SCHOOL_CERTIFIED LIKE'Yes';

PROBLEM7
%sql select AVG(SAFETY_SCORE) FROM CHICAGO_PUBLIC_SCHOOLS;

PROBLEM8
%sql select COMMUNITY_AREA_NAME, College_Enrollment From CHICAGO_PUBLIC_SCHOOLS order by College_Enrollment DESC limit 5;

PROBLEM9
%sql SELECT COMMUNITY_AREA_NAME, SAFETY_SCORE FROM CHICAGO_PUBLIC_SCHOOLS WHERE SAFETY_SCORE = (SELECT MIN(SAFETY_SCORE) FROM CHICAGO_PUBLIC_SCHOOLS);

PROBLEM10
%sql select CENSUS_DATA.COMMUNITY_AREA_NAME, CENSUS_DATA.PER_CAPITA_INCOME from CHICAGO_PUBLIC_SCHOOLS, CENSUS_DATA where CENSUS_DATA.COMMUNITY_AREA_NUMBER = CHICAGO_PUBLIC_SCHOOLS.COMMUNITY_AREA_NUMBER and CHICAGO_PUBLIC_SCHOOLS.SAFETY_SCORE = 1;
